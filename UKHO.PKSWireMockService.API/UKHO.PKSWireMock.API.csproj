    </None>
    <None Include="__files\Request1.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="__files\Request2.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="__files\Response1.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Include="__files\Response2.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
